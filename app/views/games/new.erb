<header> <title>New Game</title> </header>

<h2>Please Enter a New Video Game</h2>

<% if !@game_errors.empty? %>
  <h3 style="color:#FF0000"><u>WARNING: GAME COULD NOT BE CREATED FOR THE FOLLOWING REASON<%="S" if @game_errors.length > 1 %>:</u></h3>
  <ol style="color:#FF0000">
    <% @game_errors.each do |error| %>
      <li> <b> <%= error %> </b> </li>
    <% end %>
  </ol>
  <% @game_errors.clear%>
<% end %>

<form action="/games" method="POST">
  <label> Title </label>
  <input type="text" name="title"> </br>

  <label> Genre </label>
  <input type="text" name="genre"> </br>

  <label> Release Year </label>
  <input type="text" name="release_year"> </br>

  <label> Rating </label>
  <input type="text" name="rating"> </br>

  <label> Country </label>
  <input type="text" name="country"> </br>

  <label> Developer </label>
  <input type="text" name="developer"> </br>

  <label> Publisher </label>
  <input type="text" name="publisher"> </br>

  <label> What Console is this game for? </label>
  <select name="console_id">
    <% if !@consoles.empty? %>
      <% @consoles.each do |console| %>
        <option value="<%=console.id %>"> <%= console.company_and_name %> </option>
      <% end %>
    <% end %>
  </select> </br>

  <input type="submit" value="Create Game">

</form>
